<configuration>
	<system.webServer>
	<staticContent>
	    <mimeMap fileExtension=".json" mimeType="application/json" />
	    <mimeMap fileExtension=".3dsx" mimeType="application/3dsx" />
	    <mimeMap fileExtension=".smdh" mimeType="application/smdh" />
	</staticContent>
        <rewrite>
        <rules>
<rule name="Always SSL" enabled="true">
      <match url="(.*)" />
        <conditions>
          <add input="{HTTP_HOST}" negate="true" pattern="^www\.(.*)$" />
        </conditions>
        <action type="Redirect" url="https://www.{HTTP_HOST}/{R:0}" appendQueryString="true" redirectType="Permanent" />
    </rule>

	        <rule name="API">
				<match url="^api/.*"  />
				<action type="Rewrite" url="/api.php"  appendQueryString="true" />
			</rule>
        </rules>
       </rewrite>
	</system.webServer>
</configuration>
