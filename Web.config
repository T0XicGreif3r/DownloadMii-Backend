<configuration>
	<system.webServer>
	<staticContent>
	    <mimeMap fileExtension=".json" mimeType="application/json" />
	    <mimeMap fileExtension=".3dsx" mimeType="application/3dsx" />
	    <mimeMap fileExtension=".smdh" mimeType="application/smdh" />
	</staticContent>
        <rewrite>
        <rules>
			<rule name="Transfer" stopProcessing="true">
                <match url=".*" />
                <action type="Redirect" url="http://www.downloadmii.com/{R:0}" redirectType="Permanent" />
            </rule>
	        <rule name="API">
				<match url="^api/.*"  />
				<action type="Rewrite" url="/api.php"  appendQueryString="true" />
			</rule>
			<rule name="Force HTTPS" enabled="true">
				<match url="^.*/secure/(.*)$"/>
				<conditions>
					<add input="{HTTPS}" pattern="off" />
				</conditions>
				<action type="Redirect" url="https://{HTTP_HOST}/secure/{R:1}" appendQueryString="true" redirectType="Permanent" />
			</rule>
        </rules>
       </rewrite>
	</system.webServer>
</configuration>
